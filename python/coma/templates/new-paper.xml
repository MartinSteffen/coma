<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
  <head>
    <title>COMA Conference Manager: Paper Submission</title>
    <link rel="stylesheet" type="text/css" media="screen" href="coma.css"/>
  </head>
  <body>
    <h1>Submit A Paper</h1>
    <form action="index.py?action=submit&amp;sid=%(sid)s" method="post">
      <table class="submit">
	<tr>
	  <td>Title</td>
	  <td>
	    <input type="hidden" name="email" value="%(email)s"
		   readonly="readonly"/>
	    <input type="hidden" name="sid" value="%(sid)s"
		   readonly="readonly"/>
	    <input type="text" name="title" size="70"/>
	  </td>
	</tr>
	<tr>
	  <td>Abstract</td>
	  <td><textarea rows="24" cols="80" name="abstract"/></td>
	</tr>
	<tr>
	  <td>File</td>
	  <td><input type="file" name="file" size="60"/></td>
	</tr>
      </table>
      <p>
      <input type="submit" value="Submit"/>
      <input type="reset"/>
      </p>
    </form>
    <hr/>
    <p><a href="http://localhost/w3c-validator/check?uri=referer">Valid XHTML 1.1</a></p>
  </body>
</html>
