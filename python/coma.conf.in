# -*- apache -*-
# Example httpd.conf snippet for my python implementation of the coma
# conference manager.
#
Alias /coma "%(basedir)s"

<Directory %(basedir)s>
    AddHandler	mod_python .py
    PythonHandler mod_python.cgihandler
    PythonDebug On
    PythonAutoReload On
</Directory>

<Directory %(basedir)s/papers>
    AllowOverride	None
    Order		deny,allow
    Deny from all
</Directory>

<Directory %(basedir)s/templates>
    AllowOverride	None
    Order		deny,allow
    Deny from all
</Directory>
