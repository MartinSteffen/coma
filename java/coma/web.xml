    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>Conference manager</display-name>
    <description>
      Conference Management's System
    </description>

    <servlet>
     <servlet-name>Login</servlet-name>
     <servlet-class>coma.servlet.servlets.Login</servlet-class>
    </servlet>
    
    <servlet>
     <servlet-name>chair</servlet-name>
     <servlet-class>coma.servlet.servlets.chair</servlet-class>
    </servlet>
    
    <servlet>
     <servlet-name>invite</servlet-name>
     <servlet-class>coma.servlet.servlets.invite</servlet-class>
    </servlet>
    
   
    <servlet-mapping>
      <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>chair</servlet-name>
    <url-pattern>/chair</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>invite</servlet-name>
    <url-pattern>/invite</url-pattern>
    </servlet-mapping>

